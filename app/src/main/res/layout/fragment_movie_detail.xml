<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.movieapp.data.models.Movie" />

        <variable
            name="video"
            type="com.example.movieapp.data.models.Video" />

        <variable
            name="viewModel"
            type="com.example.movieapp.ui.moviedetail.MovieDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        tools:context=".ui.moviedetail.MovieDetailFragment"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="WebViewLayout">

                <WebView
                    android:layout_width="match_parent"
                    android:id="@+id/playVideo"
                    android:layout_height="@dimen/_250pxh"/>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/btn_back"
                        android:src="@drawable/baseline_keyboard_backspace_24"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_more_horiz_24"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_20pxh"
                        android:layout_height="wrap_content" />
                </androidx.appcompat.widget.Toolbar>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/backgroud_movie_detail"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:maxWidth="@dimen/_143pxh"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.01"
                            android:id="@+id/txt_movie_name"
                            android:singleLine="false"
                            android:text="@{viewModel.movieDetail.originalTitle}"
                            style="@style/txtMulibold14"
                            tools:text="nulldskadkaskdddddddddddddsada"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:src="@drawable/baseline_bookmark_border_24"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/star"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/txt_vote_average"
                            android:text="@{String.valueOf(viewModel.movieDetail.vote_average)}"
                            tools:text="null"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <GridView
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10pxh"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@{`Length\n` + String.valueOf(viewModel.movieDetail.runTime)}"
                            android:layout_weight="1"
                            tools:text="null"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginStart="@dimen/_10pxh"
                            android:layout_width="wrap_content"
                            android:text="@{`Language\n` + viewModel.movieDetail.originalLanguage}"
                            android:lineSpacingExtra="@dimen/_3pxh"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rating\nnull"
                            android:layout_weight="1"
                            android:lineSpacingExtra="@dimen/_3pxh"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10pxh"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Description"
                            android:layout_weight="0.65"
                            style="@style/txtMerriweatherblack16"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10pxh"
                            android:layout_marginEnd="@dimen/_10pxh"
                            tools:text="null"
                            android:text="@{viewModel.movieDetail.overview}"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10pxh"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Cast"
                            android:layout_weight="0.65"
                            style="@style/txtMerriweatherblack16"
                            android:layout_marginBottom="@dimen/_10pxh"
                            android:layout_height="wrap_content" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:id="@+id/rv_casts"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>