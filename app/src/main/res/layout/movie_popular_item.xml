<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.bumptech.glide.Glide" />
        <import type="com.example.movieapp.ui.common.etx.ImageViewExtKt"/>
        <variable
            name="item_popular"
            type="com.example.movieapp.data.models.Movie" />
        <variable
            name="genre"
            type="com.example.movieapp.data.models.GenresMovie" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="47dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_92pxh"
                android:id="@+id/iv_movie_popular_porter"
                android:src="@drawable/image"
                app:image="@{`/w92` + item_popular.poster_path}"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="120dp"
                    tools:text="@{String.valueOf(item_popular.title)}"
                    android:id="@+id/txt_movie_popular_name"
                    android:layout_height="wrap_content"
                    style="@style/txtMulibold14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_vote_average_popular"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@{String.valueOf(item_popular.vote_average)}"
                        tools:text="6.4/10 IMDb" />
                </LinearLayout>

                <GridView
                    android:layout_width="wrap_content"
                    android:numColumns="3"
                    android:verticalSpacing="@dimen/_4pxh"
                    android:id="@+id/gv_genres_movie"
                    app:genres="@{item_popular.genreIds}"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/clock"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="4dp"
                        tools:text="1h 47m"
                        style="@style/time"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>